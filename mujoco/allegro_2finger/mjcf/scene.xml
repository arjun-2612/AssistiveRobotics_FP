<mujoco model="left_allegro_hand scene">
  <include file="left_hand_2finger.xml"/>

  <statistic center="0 0 0" extent="0.3"/>

  <visual>
    <rgba haze="0.15 0.25 0.35 1"/>
    <quality shadowsize="8192"/>
    <global azimuth="220" elevation="-40"/>
  </visual>

  <asset>
    <texture type="skybox" builtin="gradient" rgb1="0.3 0.5 0.7" rgb2="0 0 0" width="512" height="3072"/>
    <texture type="2d" name="groundplane" builtin="checker" mark="edge" rgb1="0.2 0.3 0.4" rgb2="0.1 0.2 0.3"
      markrgb="0.8 0.8 0.8" width="300" height="300"/>
    <material name="groundplane" texture="groundplane" texuniform="true" texrepeat="5 5" reflectance="0.2"/>
  </asset>

  <!-- Set initial keyframe with grasp configuration -->
  <keyframe>
    <key name="initial_grasp" 
         qpos="-0.1 1.2 0.4 0.47 1.0 0.7 0.45 0.47    0.00 0.06 0.12  1 0 0 0"
         ctrl="-0.1 1.2 0.4 0.47 1.0 0.7 0.45 0.47"/>
        
    <!-- NEW: Open hand configuration for testing (no object interaction) -->
    <key name="open_hand_test" 
        qpos="0.0 0.5 0.3 0.2 0.5 0.5 0.3 0.2    0.00 0.06 0.50  1 0 0 0"
        ctrl="0.0 0.5 0.3 0.2 0.5 0.5 0.3 0.2"/>
    <!-- qpos layout:
         [0-7]: joint positions for ffj0-3, thj0-3
         [8-10]: object position (x, y, z) 
         [11-14]: object quaternion (w, x, y, z)
    -->
  </keyframe>

  <worldbody>
    <light pos="0 0 1"/>
    <light pos="0.3 0 1.5" dir="0 0 -1" directional="true"/>
    <geom name="floor" pos="0 0 -0.1" size="0 0 0.05" type="plane" material="groundplane"/>

    <!-- Object positioned between fingers in the air -->
    <body name="object" pos="0.00 0.06 0.12">
      <freejoint/>
      <geom name="object_geom" type="sphere" size="0.03 0.02 0.04" rgba="0.5 0.7 0.5 1" 
        condim="6" priority="1" friction="0.7 0.005 0.005" mass="0.05"/>
        <site name="object_center" pos="0 0 0" size="0.005" rgba="1 0 0 1"/>
    </body>
  </worldbody>
</mujoco>
